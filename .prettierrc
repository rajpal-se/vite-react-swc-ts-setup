{
	"trailingComma": "es5",
	"tabWidth": 4,
	"semi": true,
	"singleQuote": true,
	"useTabs": false,
	"endOfLine": "lf",
	"printWidth": 100,
	"bracketSpacing": true,
	"bracketSameLine": false,
	"arrowParens": "always",
	"overrides": [
		{
			"files": ["*.yml", "*.yaml"],
			"options": {
				"tabWidth": 2
			}
		},
		{
			"files": [".prettierrc", "package.json", "package-lock.json"],
			"options": {
				"tabWidth": 4,
				"useTabs": true
			}
		}
	]
}
